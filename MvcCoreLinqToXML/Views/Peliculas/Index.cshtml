@model IEnumerable<MvcCoreLinqToXML.Models.Pelicula>

@{
    ViewData["Title"] = "Index";
}

<h1>Peliculas</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Poster)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                <img src="@item.Poster" style="width: 400px; height: 450px"/>
            </td>
            <td>
                <a asp-controller="Peliculas" 
                    asp-action="EscenasPelicula" 
                    asp-route-idpelicula="@item.IdPelicula"
                    class="btn btn-outline-info">
                    Escenas Peliculas
                </a>
                <a asp-controller="Peliculas" 
                    asp-action="DetallePeliculaEscena" 
                    asp-route-idpelicula="@item.IdPelicula"
                    class="btn btn-outline-success">
                    Detalle Pelicula Escena
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
